#ifndef INC_DRIVERS_I2C_H_
#define INC_DRIVERS_I2C_H_
#include <stdint.h>

#define I2C_WRITE 0
#define I2C_READ  1

void I2C1_init(void);
void I2C1_start(uint8_t address, uint8_t direction);
void I2C1_write(uint8_t data);
void I2C1_stop(void);


#endif /* INC_DRIVERS_I2C_H_ */
